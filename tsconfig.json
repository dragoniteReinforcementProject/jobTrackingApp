{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"]
}
